    <div id="calendar" style="margin-right: 10%;margin-left: 10%;">
        <div id='fullDiv' v-if="isShowCalendar">
            <div class="calendar-month">
                <i class="fas fa-angle-left prev" @click="decMonth()"></i>
                <div>
                    <h1 style="font-family:'Source Sans Pro', sans-serif">{{ monthName }}</h1>
                    <h2 style="font-family:'Source Sans Pro', sans-serif">2022</h2>
                </div>
                <i class="fas fa-angle-right next" @click="addMonth()"></i>
            </div>
            
            <ul>
                <li class="calendar-date">SUN</li>
                <li class="calendar-date">MON</li>
                <li class="calendar-date">TUE</li>
                <li class="calendar-date">WED</li>
                <li class="calendar-date">THUR</li>
                <li class="calendar-date">FRI</li>
                <li class="calendar-date">SAT</li> 
                <li class="calendar-date" v-for="(date, index) in preDatesList" ></li>
                <li class="calendar-date-active" @click="onDateClick(index)" v-for="(date, index) in datesList" >{{ date }}</li>
                <li class="calendar-date" v-for="(date, index) in postDatesList" ></li>
            </ul>
        </div>

        <div class="calendar-time-table" v-if="isShowDateInfo" >
            <label style="font-size: 30px;">{{ formattedDate }}</label>
            <table>
                <tr>
                    <td>&nbsp;</td>
                    <td style="font-size:15px">&nbsp;&nbsp;9:00~</br>10:00 </td>
                    <td style="font-size:15px">10:00~</br>11:00 </td>
                    <td style="font-size:15px">11:00~</br>12:00 </td>
                    <td style="font-size:15px">12:00~</br>13:00 </td>
                    <td style="font-size:15px">13:00~</br>14:00 </td>
                    <td style="font-size:15px">14:00~</br>15:00 </td>
                    <td style="font-size:15px">15:00~</br>16:00 </td>
                    <td style="font-size:15px">16:00~</br>17:00 </td>
                    <td style="font-size:15px">17:00~</br>18:00 </td>
                </tr>
                <tr v-for="(roomName, index) in roomNames">
                    <th style="font-size:15px"> {{roomName}} </th>
                    <td v-for="avail in roomAvail[index]" :style="avail ? 'background-color: saddlebrown;' : ''">&nbsp;</td>
                </tr>
            </table>
            <button class="calendar-button" @click="changeState(2)" style="height:36px; width: 120px; margin-left: 50%;">Book!</button>
        </div>

